{{>admin}}
<form action="">
  <div id="search">
    <label>
      <span>Search For Table Reservation:</span>
      <input type="text" name="name">
    </label>
    <label>
      <input type="submit" value="Search">
    </label>
  </div>
</form>

<h2>All Tables</h2>
<ul class="availability">
{{#each tables}}
<li>
  <a href="/admin/tables/id/{{this.dataValues.id}}">
    {{#if this.dataValues.available}}
      <span class="room-reserved">{{this.dataValues.id}}</span>
    {{/if}}
    {{#unless this.dataValues.available}}
      <span class="room-available">{{this.dataValues.id}}</span>
    {{/unless}}
  </a>
{{/each}}
</li>

<ul class="legend">
  <li><span class="room-available">Table Available</span></li>
  <li><span class="room-reserved">Table Reserved</span></li>
  <li><span class="room-occupied">Table Occupied</span></li>
</ul>