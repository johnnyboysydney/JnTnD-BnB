<h1>Restaurant</h1>
<form action="/tables" method="post">
  <label>
    <span>Name</span>
    <input type="text" name="name" placeholder="Please enter your name" required="required">
  </label>
  <label>
    <span>Contact Number</span>
    <input type="text" name="phone" placeholder="Please enter your phone" required="required">
  </label>
  <label>
    <span>
      Email
    </span>
    <input type="email" name="email" placeholder="Please enter your email"  required="required">
  </label>
  <label>
    <span>Time</span>
    <input type="time" name="res_time" placeholder=""  required="required">
  </label>
  <label>
    <span>Number of People</span>
    <input type="text" name="num_party" placeholder="How many people are in your party?"  required="required">
  </label>
  <label>
    <input type="submit" value="Make reservation">
  </label>
</form>

{{#each tables}}
  {{#if this.dataValues.available}}
  <li class="list-group-item">
    <div class="input-group">
      <p class="lead">Your Reservation has been confirmed. <br>
      Your table # is {{this.dataValues.id}} <br>
      Name: {{this.dataValues.name}} <br>
      Number in Party: {{this.dataValues.num_party}} <br>
      Reservation Time: {{this.dataValues.res_time}}</p>
      <form action="/tables/{{this.dataValues.id}}?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-big btn-secondary btn-lg" id="trash">Cancel Resv<span class="  glyphicon glyphicon-trash"></span></button>
    </form>
    </div>
  </li>
  {{/if}}
{{/each}}